<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center">

    <TextView
        android:id="@+id/instruction_title"
        android:layout_width="0dp"
        android:layout_height="35dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:gravity="center"
        android:text="INGREDIENT/AMT"
        android:textColor="#000000"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/ingredient_view"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:background="#E6DEDE"
        android:hint="INGREDIENT"
        android:textAlignment="center"
        android:textColor="#656363"
        app:layout_constraintEnd_toStartOf="@+id/ingredient_amount_view"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/instruction_title" />

    <EditText
        android:id="@+id/ingredient_amount_view"
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:background="#E6DEDE"
        android:hint="AMT"
        android:textAlignment="center"
        android:textColor="#656363"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/ingredient_view"
        app:layout_constraintTop_toTopOf="@+id/ingredient_view" />

    <TextView
        android:id="@+id/ok_selection"
        android:layout_width="90dp"
        android:layout_height="60dp"
        android:layout_marginStart="72dp"
        android:layout_marginTop="16dp"
        android:background="#E6DEDE"
        android:gravity="center"
        android:text="OK"
        android:textColor="#000000"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ingredient_view" />

    <TextView
        android:id="@+id/cancel_selection"
        android:layout_width="90dp"
        android:layout_height="60dp"
        android:layout_marginEnd="16dp"
        android:gravity="center"
        android:background="#E6DEDE"
        android:text="CANCEL"

        android:textColor="#000000"
        android:textSize="18sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/ok_selection"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/ok_selection" />

</androidx.constraintlayout.widget.ConstraintLayout>